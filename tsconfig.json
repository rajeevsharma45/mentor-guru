{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
  "module": "ESNext",
  "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true,
    "types": ["react", "react-dom", "node"],

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false, 

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
, "tailwind.config.ts.bak"  ],
  "exclude": ["node_modules"]
}
